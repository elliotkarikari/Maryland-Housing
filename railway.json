{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "services": {
        "postgres": {
          "plan": "postgres",
          "variables": {
            "POSTGRES_DB": "maryland_atlas",
            "POSTGRES_EXTENSIONS": "postgis"
          }
        }
      }
    }
  },
  "cron": [
    {
      "name": "monthly-pipeline-run",
      "schedule": "0 2 1 * *",
      "command": "python src/run_pipeline.py --level county --run-ai auto --skip-ingestion false"
    },
    {
      "name": "weekly-ai-cip-extraction",
      "schedule": "0 3 * * 1",
      "command": "python -m src.ai.pipeline.cip_extractor --all --cost-limit 5.0"
    },
    {
      "name": "daily-export-refresh",
      "schedule": "0 5 * * *",
      "command": "python src/run_pipeline.py --export-only"
    }
  ]
}
